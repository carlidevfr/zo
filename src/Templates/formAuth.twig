{% extends "base.html.twig" %}

{% block head_title %}Arcadia-Connexion
{% endblock %}

{% block head_description %}connexion Ã  votre espace membre
{% endblock %}

{% block stylesheet %}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<link rel="stylesheet" href="./public/scss/main.css">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
{% endblock %}

{% block body %}

	<a href="{{base_url}}">Accueil</a>
	<a href="{{base_url}}admin">Admin</a>
	<br><br>
	<div class='container-fluid'>
		<div class='row justify-content-center'>
			<h1 class="col-11 col-md-6 col-lg-5 col-xl-4 col-xxl-3 m-5">Formulaire de connexion</h1>
		</div>
	</div>

	<form class='container-fluid' action="{{base_url}}login" method="post" enctype="multipart/form-data">
		<div class='row justify-content-center'>
			<div class="form-group col-11 col-md-6 col-lg-5 col-xl-4 col-xxl-3 m-2">
				<label for="id">Email</label>
				<input class="form-control" type="email" name="id">
			</div>
		</div>
		<div class='row justify-content-center'>

			<div class="form-group col-11 col-md-6 col-lg-5 col-xl-4 col-xxl-3 m-2">
				<label for="password">Mot de passe</label>
				<input class="form-control" type="password" name="password">
			</div>
		</div>

		<div class="row justify-content-center ">
			<button class="btn btn-primary col-11 col-md-6 col-lg-5 col-xl-4 col-xxl-3 m-2" type="submit">Connexion</button>

		</div>

	</form>
	<br>
	<div class="row justify-content-center ">
		<span class="col-11 col-md-6 col-lg-5 col-xl-4 col-xxl-3 m-2">{{message}}</span>

	</div>

{% endblock %}
