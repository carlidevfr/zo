{% extends "base.html.twig" %}

{% block head_title %}Arcadia-Animal
	{{res.valeur}}
{% endblock %}

{% block head_description %}Arcadia-Animal
	{{res.valeur}}
{% endblock %}

{% block stylesheet %}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<link rel="stylesheet" href="/Public/scss/main.css">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
{% endblock %}

{% block body %}


	{% if res.images[0].data is not empty %}
		<!-- S'il y a une image -->
		<div class="container-fluid d-flex flex-column justify-content-center bg-image vh-100" style="background-image: linear-gradient(rgba(0, 0, 0, 0.25), rgba(0, 0, 0, 0.25)), url(data:{{res.images[0].type}};base64,{{res.images[0].data}})">
			<div class="row">
				<div class="col-11 ms-lg-5 ps-lg-5">
					<h1 class=" text-center text-md-start ms-md-5 pb-5 ps-md-5 text-white">PRESENTATION DE
						{{res.valeur|upper }}</h1>

				</div>
			</div>
		</div>

	{% else %}
		<div class="container-fluid">
			<div class="row mt-5 align-items-center justify-content-center">
				<div class="col-11 col-xl-10 col-xxl-9 mt-5 mb-5">
					<h1 class="mt-5 mb-5">PRESENTATION DE
						{{res.valeur|upper|striptags|raw }}</h1>
				</div>
			</div>
		</div>
	{% endif %}


	<main class='container-fluid mt-5'>

		<article class="row align-items-stretch justify-content-between col-11 col-xl-10 col-xxl-9 mt-5">
			<div class=" col-12 col-md-5 col-xl-4 background__primary text-white d-flex flex-column align-items-start justify-content-center p-5 mt-5 mb-5">
				<h2 class="mb-3">Etat de santé de l'animal:</h2>
				<h3>{{res.etat|striptags|raw}}</h3>
			</div>

			<div class="col-12 col-md-5 col-xl-4 background__secondary d-flex flex-column align-items-start justify-content-center p-5 text-white mt-5 mb-5">
				<h2 class="mb-3">Race</h2>
				<h3>{{res.nom_race|striptags|raw}}</h3>
			</div>
		</article>

		<div id='animal-display-animaux' class="main col-11 col-xl-10 col-xxl-9"></div>

		<div class="row align-items-stretch justify-content-between col-11 col-xl-10 col-xxl-9">
			<div class=" col-12 col-md-5 col-xl-4 background__tertiary text-white d-flex flex-column align-items-start justify-content-center p-5 mb-5">
				<h2 class="mb-3">Habitat:</h2>
				<h3>{{res.nom_habitat|striptags|raw}}</h3>
			</div>
		</div>

		<h2 class='col-11 col-xl-10 col-xxl-9'>Notes du vétérinaire</h2>

		<div id='animal-display-veterinaire' class="main col-11 col-xl-10 col-xxl-9" style="gap:20px;"></div>

	</main>

	<div id='data' data="{{ res.id|striptags|raw }}"></div>

	<script type="module" src="{{base_url}}Public/js/animalbyIdPage.js" async defer></script>

{% endblock %}
