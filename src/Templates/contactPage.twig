{% extends "base.html.twig" %}

{% block head_title %}Arcadia-Contactez-nous
{% endblock %}

{% block head_description %}Arcadia-Contactez-nous
{% endblock %}

{% block stylesheet %}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<link rel="stylesheet" href="/Public/scss/main.css">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
{% endblock %}

{% block body %}

	<main class='container-fluid mt-5'>

		<header class="header__cardContact row col-12 col-sm-11 text-white mt-sm-5">
			<div class="cardContact">
				<section class="cardContact__form">
					<h1 class="form__h1">Envoyez-nous un message !</h1>
					<form class="form" action="{{base_url}}contact" method="post" enctype='multipart/form-data'>
						<label for="societe">Nom<br>
							<input name="Nom" id="Nom" type="text" required>
						</label>
						<label id="email-label" for="email">Email<br>
							<input name="email" id="email" type="email" required>
						</label>
						<label for="message">Message<br>
							<textarea name="message" id="message" rows="7" required></textarea>
						</label>
						<button type="submit" class="button__submit btn btn-warning">ENVOYER</button>
					</form>
					<p id="submit-state">
						{% if res is defined %}
							{# Le code à exécuter si res existe #}
							{{ res|striptags|raw }}
						{% endif %}
					</p>
				</section>

				<div class="cardContact__contact">
					<div class="main__sectionImg">
						<img src="/Public/assets/contactez-nous.svg" alt="Contactez nous">
					</div>
					<div class="contact__contactUs mt-3">
						<p>
							<a class="text-white mt-3" href="tel:09704547854739">09704547854739</a>
						</p>
					</div>
					<div class="contact__contactUs">
						<p>
							<a class="text-white" href="mailto:contact@dzzdzdzdzz.fr">contact@dzzdzdzdzz.fr</a>
						</p>
					</div>
				</div>
			</div>
		</header>
	</main>

	<script type="module" src="{{base_url}}Public/js/form.js" async defer></script>

{% endblock %}
